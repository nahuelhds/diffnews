{
  "name": "diffnews",
  "version": "0.0.0",
  "description": "Track news changes and post them on the social network",
  "type": "module",
  "scripts": {
    "dev": "tsc -w -p tsconfig.json",
    "dev:start": "node --trace-warnings build/main.js",
    "dev:authorize": "node --trace-warnings build/authorize.js",
    "dev:build": "tsc -p tsconfig.json",
    "clean": "rimraf coverage build tmp",
    "prestart": "npm run clean && tsc -p tsconfig.release.json",
    "start": "node build/main.js",
    "start:cron": "node build/cron.js",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage --passWithNoTests",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nahuelhds/diffnews.git"
  },
  "keywords": [
    "diffengine",
    "diff",
    "social",
    "media",
    "media",
    "news",
    "changes"
  ],
  "author": "nahuelhds",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/nahuelhds/diffnews/issues"
  },
  "homepage": "https://github.com/nahuelhds/diffnews#readme",
  "dependencies": {
    "@extractus/article-extractor": "^7.3.1",
    "@extractus/feed-extractor": "^7.0.8",
    "@types/html-to-text": "^9.0.4",
    "@types/inquirer": "^9.0.7",
    "dayjs": "^1.11.10",
    "diff": "^5.1.0",
    "diff2html": "^3.4.46",
    "dotenv": "^16.3.1",
    "filenamify": "^6.0.0",
    "filenamify-url": "^3.1.0",
    "html-to-text": "^9.0.5",
    "node-fetch": "^3.3.2",
    "puppeteer": "^21.6.1",
    "sharp": "^0.33.1",
    "twitter-api-v2": "^1.15.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/jest": "~29.5",
    "@types/node": "~20",
    "@typescript-eslint/eslint-plugin": "~6.15",
    "@typescript-eslint/parser": "~6.15",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~27.6",
    "inquirer": "^9.2.12",
    "jest": "~29.7",
    "prettier": "~3.1",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.0",
    "ts-jest": "~29.1",
    "typescript": "~5.3"
  }
}
